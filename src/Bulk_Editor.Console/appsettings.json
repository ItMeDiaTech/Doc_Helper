{
  "App": {
    "Api": {
      "PowerAutomateFlowUrl": "",
      "HyperlinkBaseUrl": "",
      "HyperlinkViewPath": "!/view?docid=",
      "TimeoutSeconds": 30,
      "MaxConcurrentRequests": 5,
      "UserAgent": "Doc-Helper-Console/3.0",
      "ValidateSsl": true
    },
    "Processing": {
      "MaxFileBatchSize": 100,
      "MaxConcurrentFiles": 5,
      "CreateBackups": true,
      "BackupFolderName": "Backup",
      "ValidateDocuments": true,
      "AllowedExtensions": [".docx"],
      "ProcessingTimeoutMinutes": 30,
      "MaxFileSizeBytes": 52428800,
      "SkipCorruptedFiles": true,
      "PreserveFileAttributes": true,
      "TempFolderPath": "Temp"
    },
    "UI": {
      "Theme": "System",
      "ShowProgressDetails": true,
      "AutoSelectFirstFile": true,
      "RememberWindowPosition": true,
      "ConfirmOnExit": false,
      "ChangelogRefreshIntervalMs": 1000,
      "ShowToolTips": true,
      "MinimizeToTray": false,
      "ShowStatusBar": true,
      "AutoSaveIntervalSeconds": 300,
      "FixSourceHyperlinks": true,
      "AppendContentID": false,
      "CheckTitleChanges": false,
      "FixTitles": false,
      "FixInternalHyperlink": true,
      "FixDoubleSpaces": true,
      "ReplaceHyperlink": false,
      "OpenChangelogAfterUpdates": false
    },
    "Data": {
      "DatabasePath": "Data/dochelper.db",
      "ExcelSourcePath": "",
      "EnableAutoSync": true,
      "SyncIntervalMinutes": 60,
      "CacheExpiryHours": 12,
      "EnableOfflineMode": true,
      "BaseStoragePath": "Data",
      "UseCentralizedStorage": true,
      "OrganizeByDate": true,
      "AutoCleanupDays": 30,
      "SeparateIndividualAndCombined": true,
      "CentralizeBackups": true
    },
    "Cache": {
      "DefaultExpiryHours": 12,
      "MaxCacheSize": 1000,
      "EnableDistributedCache": false,
      "DistributedCacheConnectionString": "",
      "EnableMemoryCompression": true,
      "CleanupIntervalMinutes": 15,
      "EnableCacheStatistics": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
