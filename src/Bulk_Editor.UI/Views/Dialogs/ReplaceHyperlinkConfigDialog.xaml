<Window x:Class="Doc_Helper.UI.Views.Dialogs.ReplaceHyperlinkConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="Replace Hyperlink Configuration" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <ui:SimpleStackPanel Margin="20" Spacing="15">
        <TextBlock Text="Hyperlink Replacement Configuration" FontSize="20" FontWeight="Bold" />

        <ui:SimpleStackPanel Spacing="10">
            <TextBlock Text="Old URL:" FontWeight="SemiBold" />
            <TextBox Text="{Binding OldUrl}" />
            <TextBlock Text="Enter the URL to be replaced" Foreground="Gray" FontSize="10" Margin="0,-2,0,5" />

            <TextBlock Text="New URL:" FontWeight="SemiBold" />
            <TextBox Text="{Binding NewUrl}" />
            <TextBlock Text="Enter the replacement URL" Foreground="Gray" FontSize="10" Margin="0,-2,0,5" />

            <ui:SimpleStackPanel Spacing="5" Margin="0,10,0,0">
                <CheckBox Content="Replace all occurrences" IsChecked="{Binding ReplaceAll}" />
                <CheckBox Content="Case sensitive" IsChecked="{Binding CaseSensitive}" />
            </ui:SimpleStackPanel>
        </ui:SimpleStackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,10,0" />
            <Button Content="Apply" Command="{Binding ApplyCommand}" Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </ui:SimpleStackPanel>
</Window>
