<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Doc Helper" 
           Language="1033" 
           Version="2.0.0.0" 
           Manufacturer="DiaTech" 
           UpgradeCode="12345678-1234-1234-1234-123456789ABC">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perUser"
             Description="Doc Helper - Document Processing Application" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Install to %AppData% - no admin rights required -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="AppDataFolder">
        <Directory Id="ManufacturerFolder" Name="DiaTech">
          <Directory Id="APPLICATIONFOLDER" Name="DocHelper">
            <Directory Id="LogsFolder" Name="logs" />
          </Directory>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Doc Helper"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>

    <!-- Main application files -->
    <DirectoryRef Id="APPLICATIONFOLDER">
      <Component Id="MainExecutable" Guid="*">
        <File Id="DocHelperExe" Source="..\publish\DocHelper.exe" KeyPath="yes">
          <Shortcut Id="ApplicationStartMenuShortcut" 
                    Directory="ApplicationProgramsFolder" 
                    Name="Doc Helper" 
                    Description="Doc Helper - Document Processing Application"
                    WorkingDirectory="APPLICATIONFOLDER" 
                    Icon="DocHelper.exe" 
                    IconIndex="0" />
          <Shortcut Id="ApplicationDesktopShortcut" 
                    Directory="DesktopFolder" 
                    Name="Doc Helper" 
                    Description="Doc Helper - Document Processing Application"
                    WorkingDirectory="APPLICATIONFOLDER" 
                    Icon="DocHelper.exe" 
                    IconIndex="0" />
        </File>
      </Component>
      
      <!-- All other application files -->
      <Component Id="ApplicationFiles" Guid="*">
        <File Id="DocHelperDll" Source="..\publish\DocHelper.dll" />
        <File Id="PrismCore" Source="..\publish\Prism.dll" />
        <File Id="PrismWpf" Source="..\publish\Prism.Wpf.dll" />
        <File Id="PrismDryIoc" Source="..\publish\Prism.DryIoc.Wpf.dll" />
        <File Id="DryIocDll" Source="..\publish\DryIoc.dll" />
        <File Id="DocumentFormatOpenXml" Source="..\publish\DocumentFormat.OpenXml.dll" />
        <File Id="VelopackDll" Source="..\publish\Velopack.dll" />
      </Component>

      <!-- Runtime files -->
      <Component Id="RuntimeFiles" Guid="*">
        <File Id="NetRuntime" Source="..\publish\*.dll" />
      </Component>

      <!-- WPF Native Libraries -->
      <Component Id="WpfNativeLibs" Guid="*">
        <File Id="WpfGfx" Source="..\publish\wpfgfx_cor3.dll" />
        <File Id="PresentationNative" Source="..\publish\PresentationNative_cor3.dll" />
        <File Id="D3DCompiler" Source="..\publish\D3DCompiler_47_cor3.dll" />
        <File Id="PenImc" Source="..\publish\PenImc_cor3.dll" />
        <File Id="VCRuntime" Source="..\publish\vcruntime140_cor3.dll" />
      </Component>
    </DirectoryRef>

    <!-- Logs folder -->
    <DirectoryRef Id="LogsFolder">
      <Component Id="LogsDirectory" Guid="*">
        <CreateFolder />
      </Component>
    </DirectoryRef>

    <!-- Remove shortcuts on uninstall -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcuts" Guid="*">
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\DiaTech\DocHelper" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Features -->
    <Feature Id="ProductFeature" Title="Doc Helper" Level="1">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="ApplicationFiles" />
      <ComponentRef Id="RuntimeFiles" />
      <ComponentRef Id="WpfNativeLibs" />
      <ComponentRef Id="LogsDirectory" />
      <ComponentRef Id="ApplicationShortcuts" />
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="APPLICATIONFOLDER" />

    <!-- Icon -->
    <Icon Id="DocHelper.exe" SourceFile="..\publish\DocHelper.exe" />
    <Property Id="ARPPRODUCTICON" Value="DocHelper.exe" />

    <!-- Launch after install -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch Doc Helper" />
    <Property Id="WixShellExecTarget" Value="[#DocHelperExe]" />
    <CustomAction Id="LaunchApplication" 
                  BinaryKey="WixCA" 
                  DllEntry="WixShellExec"
                  Impersonate="yes" />
    <InstallExecuteSequence>
      <Custom Action="LaunchApplication" After="InstallFinalize">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Custom>
    </InstallExecuteSequence>

    <!-- Update support -->
    <Property Id="ALLUSERS" Value="2" />
    <Property Id="MSIINSTALLPERUSER" Value="1" />
    
  </Product>
</Wix>