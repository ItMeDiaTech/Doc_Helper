<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="Doc Helper" 
           Language="1033" 
           Version="2.0.0.0" 
           Manufacturer="DiaTech" 
           UpgradeCode="12345678-1234-1234-1234-123456789ABC">
    
    <Package InstallerVersion="200" 
             Compressed="yes" 
             InstallScope="perUser"
             Description="Doc Helper - Document Processing Application"
             Comments="Doc Helper installs to %AppData% and requires no administrator privileges." />

    <!-- Automatic upgrades -->
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    
    <MediaTemplate EmbedCab="yes" />

    <!-- Install to %AppData% - no admin rights required -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="AppDataFolder">
        <Directory Id="ManufacturerFolder" Name="DiaTech">
          <Directory Id="APPLICATIONFOLDER" Name="DocHelper">
            <Directory Id="LogsFolder" Name="logs" />
          </Directory>
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Doc Helper"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>

    <!-- Shortcuts and registry - heat.exe will handle the actual files -->
    <DirectoryRef Id="APPLICATIONFOLDER">
      <Component Id="ApplicationShortcuts" Guid="87654321-4321-4321-4321-210987654321">
        <CreateFolder />
        <Shortcut Id="ApplicationStartMenuShortcut" 
                  Directory="ApplicationProgramsFolder" 
                  Name="Doc Helper" 
                  Description="Doc Helper - Document Processing Application"
                  Target="[APPLICATIONFOLDER]DocHelper.exe"
                  WorkingDirectory="APPLICATIONFOLDER" 
                  Icon="DocHelper.exe" 
                  IconIndex="0" />
        <Shortcut Id="ApplicationDesktopShortcut" 
                  Directory="DesktopFolder" 
                  Name="Doc Helper" 
                  Description="Doc Helper - Document Processing Application"
                  Target="[APPLICATIONFOLDER]DocHelper.exe"
                  WorkingDirectory="APPLICATIONFOLDER" 
                  Icon="DocHelper.exe" 
                  IconIndex="0" />
        <RegistryValue Root="HKCU" Key="Software\DiaTech\DocHelper" Name="shortcuts" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Logs folder -->
    <DirectoryRef Id="LogsFolder">
      <Component Id="LogsDirectory" Guid="11111111-1111-1111-1111-111111111111">
        <CreateFolder />
      </Component>
    </DirectoryRef>

    <!-- Remove shortcuts on uninstall -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ProgramMenuCleanup" Guid="22222222-2222-2222-2222-222222222222">
        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\DiaTech\DocHelper" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Features -->
    <Feature Id="ProductFeature" Title="Doc Helper" Level="1">
      <ComponentGroupRef Id="ApplicationFiles" />
      <ComponentRef Id="ApplicationShortcuts" />
      <ComponentRef Id="LogsDirectory" />
      <ComponentRef Id="ProgramMenuCleanup" />
    </Feature>

    <!-- UI -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="APPLICATIONFOLDER" />

    <!-- Icon -->
    <Icon Id="DocHelper.exe" SourceFile="..\publish\DocHelper.exe" />
    <Property Id="ARPPRODUCTICON" Value="DocHelper.exe" />

    <!-- Launch after install -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch Doc Helper" />
    <Property Id="WixShellExecTarget" Value="[APPLICATIONFOLDER]DocHelper.exe" />
    <CustomAction Id="LaunchApplication" 
                  BinaryKey="WixCA" 
                  DllEntry="WixShellExec"
                  Impersonate="yes" />
    <InstallExecuteSequence>
      <Custom Action="LaunchApplication" After="InstallFinalize">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Custom>
    </InstallExecuteSequence>

    <!-- Per-user installation settings for auto-update compatibility -->
    <Property Id="ALLUSERS" Value="2" />
    <Property Id="MSIINSTALLPERUSER" Value="1" />
    
  </Product>
</Wix>